.post-body {
  word-wrap();
  font-family: $font-family-posts;

  span.exturl .fa {
    font-size: $font-size-small;
    margin-left: 4px;
  }

  .image-caption, .figure .caption {
    color: $grey-dark;
    font-size: $font-size-small;
    font-weight: bold;
    line-height: 1;
    margin: -20px auto 15px;
    text-align: center;
  }
}

.post-sticky-flag {
  display: inline-block;
  transform: rotate(30deg);
}

.use-motion {
  if (hexo-config('motion.transition.post_block')) {
    .post-block, .pagination, .comments {
      opacity: 0;
    }
  }

  if (hexo-config('motion.transition.post_header')) {
    .post-header {
      opacity: 0;
    }
  }

  if (hexo-config('motion.transition.post_body')) {
    .post-body {
      opacity: 0;
    }
  }

  if (hexo-config('motion.transition.coll_header')) {
    .collection-title {
      opacity: 0;
    }
  }
}
.posts-expand{
  .list-item{
    padding: 1.25rem;
    background-color: $card;
    margin-bottom: 1.5rem;
    position: relative;
    display: -ms-flexbox;
    display: flex!important;
    -ms-flex-direction: column;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    flex-direction: row;
    .media{
      position: relative;
      display: block;
      overflow: hidden;
      padding: 0;
      -ms-flex-negative: 0;
      flex-shrink: 0;
      border-top-left-radius: inherit;
      border-top-right-radius: inherit;
      display: -ms-flexbox;
      display: flex;
      -ms-flex-align: start;
      align-items: flex-start;
      flex: 0 0 33.333333%;
      max-width: 33.333333%;
    }
    .media-content{
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      border: 0;
      border-radius: inherit;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: 50% 50%;
      background-color: rgba(120,120,120,.1);
    }
    .list-content {
      padding: 0 0 0 1rem;
      display: -ms-flexbox;
      display: flex;
      -ms-flex-direction: column;
      flex-direction: column;
      -ms-flex: 1 1 auto;
      flex: 1 1 auto;
      -ms-flex-pack: center;
      justify-content: center;
    }
    .list-body {
      -ms-flex: 1 1 auto;
      flex: 1 1 auto;
    }
    .nice-dark-mode, .nice-dark-mode a:not(.btn) {
      color: #fff;
    }
    a:link, a:visited {
      text-decoration: none;
      border: none;
    }
    .h-2x p{
      overflow: hidden;
      display: -webkit-box;
      font-size: 12px;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
    }
    .list-title .badge {
      position: relative;
      top: -2px;
      font-size: .75rem;
      margin: 0 .25rem 0 0;
    }
    .list-footer {
        margin-top: .5rem;
    }
    .badge-hot {
      color: #fff;
      background-color: #e5183b;
    }
    .flex-avatar img {
      border-radius: inherit;
      width: 100%;
    }
    .w-20 {
      width: 20px!important;
      height: 20px!important;
      font-size: .6em;
    }
    .flex-avatar {
      position: relative;
      line-height: 1;
      border-radius: 500px;
      white-space: nowrap;
      font-weight: 700;
      border-radius: 100%;
      display: -ms-flexbox;
      display: flex;
      -ms-flex-pack: center;
      justify-content: center;
      -ms-flex-align: center;
      align-items: center;
      -ms-flex-negative: 0;
      flex-shrink: 0;
      border-radius: 500px;
    }
    .d-flex {
      display: -ms-flexbox!important;
      display: flex!important;
      flex: 1 1 auto!important;
    }
    .mx-md-2 {
      margin-left: .5rem!important;
      margin-right: .5rem!important;
    }
    .d-inline-block {
      font-size: .75rem!important;
      margin-left: .5rem!important;
    }
    .text-primary {
      color: #2c63ff!important;
    }
    a{
      display: inline-block!important;
      color: #fff;
    }
    .list-title {
      line-height: 30px;
      font-size: 20px;
      display: block;
      // color: inherit;
    }
    .badge {
      display: inline-block;
      padding: .25em .4em;
      font-size: 75%;
      font-weight: 700;
      line-height: 1;
      text-align: center;
      white-space: nowrap;
      vertical-align: baseline;
      border-radius: .25rem;
      transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }
  }
}

@import 'post-button';
@import 'post-collapse';
@import 'post-eof';
@import 'post-expand';
@import 'post-gallery';
@import 'post-meta';
@import 'post-nav';
@import 'post-rtl';
@import 'post-tags';
