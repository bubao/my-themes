// https://github.com/chriskempson/tomorrow-theme
$highlight-theme = hexo-config('codeblock.highlight_theme');

@import 'theme';
@import 'diff';

@import 'copy-code' if (hexo-config('codeblock.copy_button.enable'));

// Placeholder: $code-block
$code-block {
  background: $highlight-background;
  color: $highlight-foreground;
  line-height: $line-height-code-block;
  margin: 20px 0;
  padding-top: 30px;
  box-shadow: 0 10px 30px 0 rgba(0,0,0,.4);
}

pre, code {
  font-family: $code-font-family;
}

code {
  word-wrap();
  background: $code-background;
  border-radius: $code-border-radius;
  color: $code-foreground;
  padding: 2px 4px;
}

pre {
  @extend $code-block;
  overflow: auto;
  padding: 10px;

  code {
    background: none;
    color: $highlight-foreground;
    font-size: $table-font-size;
    padding: 0;
    text-shadow: none;
  }
}

.highlight {
  @extend $code-block;
  position: relative;
  &:before{
    content: " ";
    position: absolute;
    border-radius: 50%;
    background: #fc625d;
    width: 12px;
    height: 12px;
    left: 12px;
    top: 28px;
    margin-top: -18px;
    box-shadow: 20px 0 #fdbc40, 40px 0 #35cd4b;
    z-index: 2;
  }
  &:after{
    color: #fff;
    box-sizing: border-box;
    content: attr(data-code);
    text-transform: capitalize;
    height: 30px;
    line-height: 30px;
    background: $highlight-current-line;
    font-size: 16px;
    position: absolute;
    margin-top: -30px;
    left: 0;
    top: 30px;
    width: 100%;
    font-family: Ubuntu,sans-serif;
    font-weight: 700;
    padding: 0 80px;
    text-indent: 15px;
    text-align: center;
    float: left;
    z-index: 1;
    border-radius: 5px 5px 0 0;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
    pointer-events: none;
  }
  *::selection {
    background: $highlight-selection;
  }

  pre {
    border: none;
    margin: 0;
    padding: 10px 0;
  }

  table {
    border: none;
    margin: 0;
    width: auto;
  }

  td {
    border: none;
    padding: 0;
  }

  figcaption {
    clearfix();
    background: $code-background;
    border-bottom: 1px solid #e9e9e9;
    color: $highlight-foreground;
    line-height: 1em;
    margin: 0;
    padding: .5em;

    a {
      color: $highlight-foreground;
      float: right;

      &:hover {
        border-bottom-color: $highlight-foreground;
      }
    }
  }

  .gutter pre {
    background-color: $highlight-gutter.bg-color;
    color: $highlight-gutter.color;
    padding-left: 10px;
    padding-right: 10px;
    text-align: center;
  }

  .code pre {
    background-color: $highlight-background;
    padding-left: 10px;
    width: 100%;
    box-shadow: none;
  }
}

.gutter {
  disable-user-select();
}

.gist table {
  width: auto;

  td {
    border: none;
  }
}

pre {
  // For diff highlight
  .deletion {
    background: $highlight-deletion;
  }

  .addition {
    background: $highlight-addition;
  }

  .meta {
    color: $highlight-yellow;
    disable-user-select();
  }

  .comment {
    color: $highlight-comment;
  }

  .variable, .attribute, .tag, .name, .regexp, .ruby .constant, .xml .tag .title, .xml .pi, .xml .doctype, .html .doctype, .css .id, .css .class, .css .pseudo {
    color: $highlight-red;
  }

  .number, .preprocessor, .built_in, .builtin-name, .literal, .params, .constant, .command {
    color: $highlight-orange;
  }

  .ruby .class .title, .css .rules .attribute, .string, .symbol, .value, .inheritance, .header, .ruby .symbol, .xml .cdata, .special, .formula {
    color: $highlight-green;
  }

  .title, .css .hexcolor {
    color: $highlight-aqua;
  }

  .function, .python .decorator, .python .title, .ruby .function .title, .ruby .title .keyword, .perl .sub, .javascript .title, .coffeescript .title {
    color: $highlight-blue;
  }

  .keyword, .javascript .function {
    color: $highlight-purple;
  }
}
